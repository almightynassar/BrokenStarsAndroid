<?xml version='1.0' encoding='utf-8'?>
<widget id="com.almightynassar.BrokenStarsAndroid" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>Broken Stars</name>
    <description>
        A Tabletop RPG reference app for the homebrew "Broken Stars" campaign. Based on the "Savage Worlds" and "Stars Without Number" rule sets.
    </description>
    <author email="almightynassar@gmail.com">
        Almighty Nassar
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="src/res/mipmap-ldpi/icon.png" />
        <icon density="mdpi" src="src/res/mipmap-mdpi/icon.png" />
        <icon density="hdpi" src="src/res/mipmap-hdpi/icon.png" />
        <icon density="xhdpi" src="src/res/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" src="src/res/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="src/res/mipmap-xxxhdpi/icon.png" />
    </platform>
    <engine name="android" spec="^6.4.0" />
    <engine name="browser" spec="^5.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-indexeddb-async" spec="^2.2.1" />
</widget>
